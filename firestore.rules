rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }

    function isAdmin() {
      return signedIn() &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['owner', 'admin'];
    }

    // Bloqueo por defecto
    match /{document=**} { allow read, write: if false; }

    // ---- admins ----
    match /admins/{uid} {
      // necesario para que el cliente pueda verificar su rol
      allow read: if signedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    // ---- ambassadors_master ----
    match /ambassadors_master/{uid} {
      allow read: if isAdmin() || (signedIn() && request.auth.uid == uid);
      allow create: if isAdmin() && request.resource.id == uid;
      allow update, delete: if isAdmin();
    }

    // ---- settings (opcional) ----
    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ---- embajadores (si la usas) ----
    match /embajadores/{doc} {
      allow read, write: if isAdmin();
    }
  }
}
